<h3>List of all brands</h3>

<p><a href="/brands/new">Add New Brand</a></p>

<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @brands.each do |brand| %>
    <tr>
      <td>
        <%= brand[:id] %>
      </td>
      <td>
        <%= brand[:name] %>
      </td>
      <td>
        <a href="/brands/<%= brand[:id] %>">View</a>
      </td>
      <td>
        <form action="/brands/<%= brand.id %>" method="post">
            <input type="hidden" name="_method" value="delete">
            <input type="submit" value="Delete">
        </form>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
